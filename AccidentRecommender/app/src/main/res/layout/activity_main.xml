<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/accident"
    android:padding="5dp"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView android:text="Welcome to Accident Recommender" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_appname"
        android:textColor="#fffffd97"
        android:textSize="20dp"
        android:autoText="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.02"
        android:paddingBottom="20dp"
        android:paddingTop="40dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/helpwanted" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="281dp"
        android:gravity="center"
        android:paddingTop="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Recommendations"
                android:id="@+id/button"
                android:layout_gravity="center"
                android:background="#ff000000"
                android:textColor="#ffffffff"
                android:textSize="18dp"
                android:onClick="toRecommend" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp">

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Statistics"
                android:id="@+id/button2"
                android:layout_gravity="center"
                android:background="#ff000000"
                android:textColor="#ffffffff"
                android:textSize="18dp"
                android:onClick="toStatistic" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.14"
            android:padding="10dp">

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Instructions"
                android:id="@+id/button3"
                android:layout_gravity="center"
                android:visibility="visible"
                android:background="#ff000000"
                android:textColor="#ffffffff"
                android:textSize="18dp"
                android:onClick="toInstruction" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
